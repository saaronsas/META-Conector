<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE CertificationDefinition PUBLIC "sailpoint.dtd" "sailpoint.dtd">
<CertificationDefinition name="%$certDef_name$%">
    <AssignedScope>
        <Reference class="sailpoint.object.Scope" name="%$scope$%"/>
    </AssignedScope>
    <Attributes>
        <Map>
            <entry key="activePeriodDurationAmount" value="2"/>
            <entry key="activePeriodDurationScale" value="Week"/>
            <entry key="allowCertificationEntityBulkAccountRevocation" value="true"/>
            <entry key="allowCertificationEntityBulkApprove" value="true"/>
